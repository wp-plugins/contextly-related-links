{{#each links}}
  <li class="search-result clearfix" data-url="{{url}}">
    <div class="search-result-action-wrapper left cell">
      {{#if ../editor.isLink}}
        <button class="website-add btn btn-mini btn-success">
          <i class="icon-ok"></i> {{t 'Use'}}
        </button>
      {{else}}
        <button class="website-add btn btn-mini">
          <i class="icon-arrow-right"></i> {{t 'Add'}}
        </button>
      {{/if}}
    </div>
    <div class="search-result-info cell">
      <h4 class="search-result-title">{{title}}</h4>

      <p class="search-result-description">{{description}}</p>

      <div class="website-url-wrapper">
        <a href="{{url}}" class="website-link" title="{{t 'Preview'}}">
          <i class="icon-eye-open"></i> <span class="website-url">{{display_url}}</span>
        </a>
      </div>
    </div>
    <div class="search-result-action-wrapper right cell">
      {{#if ../editor.isLink}}
        <button class="website-add btn btn-mini btn-success">
          <i class="icon-ok"></i> {{t 'Use'}}
        </button>
      {{else}}
        <button class="website-add btn btn-mini">
          <i class="icon-arrow-right"></i> {{t 'Add'}}
        </button>
      {{/if}}
    </div>
  </li>
{{/each}}