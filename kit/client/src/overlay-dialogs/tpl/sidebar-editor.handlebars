<div class="container-fluid contextly-editor">
  <div class="row-fluid">
    <div class="span8">
      {{> inputFields}}
      {{> searchTabs}}
      <div class="search-output"></div>
      {{> searchPager}}
    </div>
    <div class="span4 sidebar-right">
      <div class="sidebar-settings">
        <div class="control-group">
          <input class="sidebar-title" type="text" placeholder="{{t 'Sidebar title'}}" value="{{sidebar.name}}">
        </div>
        <div class="control-group">
          <textarea class="sidebar-description" placeholder="{{t 'Sidebar description'}}">{{sidebar.description}}</textarea>
        </div>
        <div class="control-group">
          <div class="btn-group input-prepend sidebar-layout">
            <span class="add-on">{{t 'Layout:'}}</span>
            <button class="btn sidebar-layout-switch" data-layout="left">
              {{t 'Left'}}
            </button>
            <button class="btn sidebar-layout-switch" data-layout="wide">
              {{t 'Wide'}}
            </button>
            <button class="btn sidebar-layout-switch" data-layout="right">
              {{t 'Right'}}
            </button>
          </div>
        </div>

        <div class="sidebar-modal modal hidden" tabindex="-1">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
              <i class="icon-remove"></i>
            </button>
            <h3>
              {{t 'Both sidebar title and description are empty!'}}
            </h3>
          </div>
          <div class="modal-body">
            <p>
              {{t 'Would you like to add a title and/or description to the sidebar?'}}
            </p>
          </div>
          <div class="modal-footer">
            <button class="btn btn-success" data-dismiss="modal">
              {{t 'Yes, return to the form'}}
            </button>
            <button class="sidebar-modal-confirm btn btn-warning">
              {{t 'No, just save it'}}
            </button>
          </div>
        </div>
      </div>

      <div class="sidebar-result hidden">
        <h3 class="widget-title">{{t 'Result:'}}</h3>

        <ul class="section-links"></ul>

        <div class="control-group sidebar-add-to-related-wrapper">
          <label class="checkbox-right"
                 title="{{t "If you check this box, the sidebar stories will also be added to the list of related links."}}">
            <input type="checkbox" class="sidebar-add-to-related"
                   checked="checked">
            {{t 'Add links to the widget too'}}
          </label>
        </div>
      </div>

      <div class="dialog-actions">
        <button class="dialog-action action-remove btn btn-danger"
                title="{{t 'Remove the sidebar'}}">
          <i class="icon-trash"></i> {{t 'Remove'}}
        </button>
        <button class="dialog-action action-cancel btn btn-warning"
                title="{{t 'Reset all changes'}}">
          <i class="icon-remove"></i> {{t 'Cancel'}}
        </button>
        <button class="dialog-action action-save btn btn-success"
                title="{{t 'Save the sidebar'}}">
          <i class="icon-ok"></i> {{t 'Save'}}
        </button>
      </div>
    </div>
  </div>
</div>
{{> urlPreview}}
{{> progressIndicator}}
